@pledge_algorithm:
if total_turns is undefined
 total_turns := 0
 force_forward := 0
endif
if force_forward = 1
 force_forward := 0
 maze.move.forward()
elsif total_turns = 0
 if maze.can.move.forward = 1
  maze.move.forward()
 endif
elsif maze.can.move.right = 1
 force_forward := 1
 total_turns -= 1
 maze.turn.right()
elsif maze.can.move.forward = 1
 maze.move.forward()
endif
total_turns += 1
maze.turn.left()
